@{
    ViewData["Title"] = "Yönetici Raporları";
}

<style>
    /* dashboard kartlari */
    .dashboard-card {
        border: none;
        border-radius: 15px;
        color: white;
        background: linear-gradient(135deg, #2c3e50, #4ca1af);
        box-shadow: 0 4px 15px rgba(44, 62, 80, 0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        overflow: hidden;
        position: relative;
    }

        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(44, 62, 80, 0.3);
        }

        /* kart deseni */
        .dashboard-card::after {
            content: "";
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            background: radial-gradient(circle at top right, rgba(255,255,255,0.1), transparent 60%);
        }

    .icon-container {
        background: rgba(255, 255, 255, 0.2);
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        backdrop-filter: blur(5px);
    }

    /* tablo karti */
    .table-card {
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        border: none;
        overflow: hidden;
    }

    .user-avatar {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        background: linear-gradient(135deg, #2c3e50, #4ca1af);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.1rem;
    }
</style>

<div class="container py-4">

    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <h6 class="text-uppercase text-muted fw-bold mb-1">Analizler</h6>
            <h2 class="fw-bold text-dark display-6">Performans Raporları</h2>
        </div>
        <div class="col-md-6 text-md-end mt-3 mt-md-0">
            <div class="d-inline-flex align-items-center bg-white p-2 rounded-pill shadow-sm border">
                <input type="date" id="startDate" class="form-control border-0 bg-transparent" value="@DateTime.Now.AddMonths(-1).ToString("yyyy-MM-dd")">
                <span class="mx-2 text-muted"><i class="fa-solid fa-arrow-right"></i></span>
                <input type="date" id="endDate" class="form-control border-0 bg-transparent" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                <button onclick="verileriYenile()" class="btn btn-dark rounded-pill ms-2 px-4" style="background: #2c3e50;">
                    <i class="fa-solid fa-filter me-2"></i>Filtrele
                </button>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-xl-4 col-md-6">
            <div class="card dashboard-card h-100">
                <div class="card-body p-4 d-flex align-items-center justify-content-between position-relative z-1">
                    <div>
                        <h6 class="text-uppercase opacity-75 mb-2 fw-bold">Toplam Ciro</h6>
                        <h2 class="mb-0 fw-bold" id="cardTotalRevenue">0 ₺</h2>
                        <small class="opacity-75">Seçili tarih aralığında</small>
                    </div>
                    <div class="icon-container">
                        <i class="fa-solid fa-wallet"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6">
            <div class="card dashboard-card h-100" style="background: linear-gradient(135deg, #11998e, #38ef7d);">
                <div class="card-body p-4 d-flex align-items-center justify-content-between position-relative z-1">
                    <div>
                        <h6 class="text-uppercase opacity-75 mb-2 fw-bold">Randevu Kaydı</h6>
                        <h2 class="mb-0 fw-bold" id="cardTotalAppts">0</h2>
                        <small class="opacity-75">Tamamlanan seanslar</small>
                    </div>
                    <div class="icon-container">
                        <i class="fa-regular fa-calendar-check"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6">
            <div class="card dashboard-card h-100" style="background: linear-gradient(135deg, #f2994a, #f2c94c);">
                <div class="card-body p-4 d-flex align-items-center justify-content-between position-relative z-1">
                    <div>
                        <h6 class="text-uppercase opacity-75 mb-2 fw-bold">En İyi Eğitmen</h6>
                        <h2 class="mb-0 fw-bold" id="cardBestInstructor" style="font-size: 1.5rem;">-</h2>
                        <small class="opacity-75">En çok gelir sağlayan</small>
                    </div>
                    <div class="icon-container">
                        <i class="fa-solid fa-trophy"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card table-card bg-white">
        <div class="card-header bg-white py-4 px-4 border-0">
            <h5 class="mb-0 fw-bold text-dark"><i class="fa-solid fa-chart-pie me-2 text-primary"></i>Eğitmen Performans Tablosu</h5>
        </div>
        <div class="table-responsive">
            <table class="table align-middle mb-0 table-hover">
                <thead class="bg-light text-muted">
                    <tr>
                        <th class="ps-4 py-3 text-uppercase small fw-bold">Eğitmen</th>
                        <th class="py-3 text-uppercase small fw-bold">Randevu Adedi</th>
                        <th class="py-3 text-uppercase small fw-bold" style="width: 30%;">Gelir Dağılımı</th>
                        <th class="py-3 text-uppercase small fw-bold text-end pe-4">Toplam Kazanç</th>
                    </tr>
                </thead>
                <tbody id="tabloGovdesi" class="border-top-0">
                    <tr>
                        <td colspan="4" class="text-center py-5">
                            <div class="spinner-border text-primary" role="status"></div>
                            <p class="mt-2 text-muted small">Veriler analiz ediliyor...</p>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            verileriYenile();
        });

        function verileriYenile() {
            // yukleniyor animasyonu
            const tablo = document.getElementById("tabloGovdesi");
            tablo.innerHTML = '<tr><td colspan="4" class="text-center py-5"><div class="spinner-border text-primary"></div></td></tr>';

            // tarihleri al
            const sDate = document.getElementById("startDate").value;
            const eDate = document.getElementById("endDate").value;

            // api url olustur (parametreler eklendi)
            const apiAdresi = `/api/RaporlarApi/EgitmenPerformans?baslangic=${sDate}&bitis=${eDate}`;

            fetch(apiAdresi)
                .then(res => res.json())
                .then(data => {
                    tablo.innerHTML = "";

                    if (!data || data.length === 0) {
                        tablo.innerHTML = '<tr><td colspan="4" class="text-center text-muted py-5"><i class="fa-solid fa-inbox fa-2x mb-2"></i><br>Kayıt bulunamadı.</td></tr>';
                        // kartlari sifirla
                        document.getElementById("cardTotalRevenue").innerText = "0 ₺";
                        document.getElementById("cardTotalAppts").innerText = "0";
                        document.getElementById("cardBestInstructor").innerText = "-";
                        return;
                    }

                    let totalRevenue = 0;
                    let totalApps = 0;
                    let bestInstructor = "-";
                    let maxRevenue = 0;

                    // genel hesaplamalar
                    data.forEach(item => {
                        totalRevenue += item.toplamKazanc;
                        totalApps += item.randevuSayisi;
                        if (item.toplamKazanc > maxRevenue) {
                            maxRevenue = item.toplamKazanc;
                            bestInstructor = item.egitmenAdi;
                        }
                    });

                    // kartlari guncelle
                    animateValue("cardTotalRevenue", totalRevenue, "₺");
                    document.getElementById("cardTotalAppts").innerText = totalApps;
                    document.getElementById("cardBestInstructor").innerText = bestInstructor;

                    // tabloyu doldur
                    data.forEach(row => {
                        let initials = row.egitmenAdi.split(" ").map(n => n[0]).join("").substring(0,2).toUpperCase();
                        let percent = maxRevenue > 0 ? Math.round((row.toplamKazanc / maxRevenue) * 100) : 0;

                        let barColor = "bg-primary";
                        if(percent >= 80) barColor = "bg-success";
                        else if(percent < 40) barColor = "bg-warning";

                        const html = `
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="user-avatar shadow-sm me-3">${initials}</div>
                                        <div>
                                            <h6 class="mb-0 fw-bold text-dark">${row.egitmenAdi}</h6>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark border rounded-pill px-3">
                                        ${row.randevuSayisi} Randevu
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="small fw-bold me-2 text-muted w-25 text-end">%${percent}</span>
                                        <div class="progress flex-grow-1" style="height: 6px; border-radius: 10px;">
                                            <div class="progress-bar ${barColor}" role="progressbar" style="width: ${percent}%"></div>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-end pe-4">
                                    <h6 class="mb-0 fw-bold text-dark">${row.toplamKazanc.toLocaleString('tr-TR')} ₺</h6>
                                </td>
                            </tr>
                        `;
                        tablo.innerHTML += html;
                    });
                })
                .catch(err => {
                    console.error(err);
                    tablo.innerHTML = `<tr><td colspan="4" class="text-center text-danger py-4"><i class="fa-solid fa-triangle-exclamation mb-2"></i><br>Veri yüklenirken hata oluştu.</td></tr>`;
                });
        }

        // sayi animasyonu
        function animateValue(id, end, suffix) {
            const obj = document.getElementById(id);
            let start = 0;
            const duration = 1000;
            let startTimestamp = null;
            const step = (timestamp) => {
                if (!startTimestamp) startTimestamp = timestamp;
                const progress = Math.min((timestamp - startTimestamp) / duration, 1);
                const value = Math.floor(progress * (end - start) + start);
                obj.innerHTML = value.toLocaleString('tr-TR') + " " + suffix;
                if (progress < 1) {
                    window.requestAnimationFrame(step);
                }
            };
            window.requestAnimationFrame(step);
        }
    </script>
}