@model GymManagementApp.Models.Randevu

@{
    ViewData["Title"] = "Randevu Sil";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden text-center">
                <div class="card-body p-5">

                    <div class="mb-4 text-danger">
                        <div class="d-inline-block bg-danger bg-opacity-10 p-4 rounded-circle mb-3">
                            <i class="fa-solid fa-trash-can fa-3x text-danger"></i>
                        </div>
                        <h3 class="fw-bold">Randevuyu Sil?</h3>
                        <p class="text-muted">Bu işlem geri alınamaz. Randevu kalıcı olarak silinecektir.</p>
                    </div>

                    <div class="bg-light rounded-3 p-4 mb-4 text-start border-start border-4 border-danger">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="fw-bold text-dark">@Model.Tarih.ToString("dd.MM.yyyy")</span>
                            <span class="badge bg-secondary">@Model.Saat</span>
                        </div>
                        <p class="text-muted mb-1 small">
                            <i class="fa-solid fa-dumbbell me-1"></i> @Model.HizmetPaketi.Ad
                        </p>
                        <p class="text-muted small mb-0">
                            <i class="fa-solid fa-user-tie me-1"></i> @Model.Egitmen.AdSoyad
                        </p>
                    </div>

                    <form asp-action="Delete" class="d-grid gap-2">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger btn-lg rounded-pill fw-bold shadow-sm">
                            <i class="fa-solid fa-check me-2"></i>Evet, Sil
                        </button>
                        <a asp-action="Index" class="btn btn-light rounded-pill text-muted">Vazgeç</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>