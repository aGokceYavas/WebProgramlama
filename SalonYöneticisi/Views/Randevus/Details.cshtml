@model GymManagementApp.Models.Randevu

@{
    ViewData["Title"] = "Randevu Detayı";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="text-center p-5 text-white position-relative" style="background: linear-gradient(135deg, #2c3e50, #4ca1af);">
                    <div class="bg-white bg-opacity-25 rounded-circle p-3 d-inline-block mb-3">
                        <i class="fa-regular fa-calendar-check fa-3x"></i>
                    </div>
                    <h2 class="fw-bold">Randevu Detayı</h2>
                    <span class="badge bg-white text-dark rounded-pill px-3 py-2 mt-2">
                        #@Model.Id
                    </span>
                </div>

                <div class="card-body p-5">
                    <div class="row text-center mb-4">
                        <div class="col-6 border-end">
                            <small class="text-muted text-uppercase fw-bold">Tarih</small>
                            <h4 class="text-dark mb-0">@Model.Tarih.ToString("dd.MM.yyyy")</h4>
                        </div>
                        <div class="col-6">
                            <small class="text-muted text-uppercase fw-bold">Saat</small>
                            <h4 class="text-dark mb-0">@Model.Saat</h4>
                        </div>
                    </div>

                    <div class="bg-light p-4 rounded-3 mb-4">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fa-solid fa-dumbbell text-muted me-3 fs-5"></i>
                            <div>
                                <small class="text-muted d-block">Hizmet Paketi</small>
                                <span class="fw-bold text-dark">
                                    @(Model.HizmetPaketi != null ? Model.HizmetPaketi.Ad : "Silinmiş Paket")
                                </span>
                            </div>
                        </div>

                        <div class="d-flex align-items-center mb-3">
                            <i class="fa-solid fa-user-tie text-muted me-3 fs-5"></i>
                            <div>
                                <small class="text-muted d-block">Eğitmen</small>
                                <span class="fw-bold text-dark">
                                    @(Model.Egitmen != null ? Model.Egitmen.AdSoyad : "Atanmamış")
                                </span>
                            </div>
                        </div>

                        <div class="d-flex align-items-center">
                            <i class="fa-solid fa-info-circle text-muted me-3 fs-5"></i>
                            <div>
                                <small class="text-muted d-block">Durum</small>
                                @if (Model.Durum == GymManagementApp.Models.RandevuDurumu.Onaylandi)
                                {
                                    <span class="text-success fw-bold">Onaylandı</span>
                                }
                                else if (Model.Durum == GymManagementApp.Models.RandevuDurumu.Iptal)
                                {
                                    <span class="text-danger fw-bold">İptal Edildi</span>
                                }
                                else
                                {
                                    <span class="text-warning fw-bold">Onay Bekliyor</span>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                            <i class="fa-solid fa-arrow-left me-2"></i>Geri
                        </a>
                        @if (User.IsInRole("Admin") || (User.Identity.Name == Model.Uye?.Email && Model.Durum != GymManagementApp.Models.RandevuDurumu.Iptal))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-dark rounded-pill px-4" style="background: #2c3e50; border:none;">
                                <i class="fa-solid fa-pen me-2"></i>Düzenle
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>