@model GymManagementApp.Models.Egitmen

@{
    ViewData["Title"] = "Eğitmen Düzenle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header text-white p-4 text-center border-0"
                     style="background: linear-gradient(135deg, #2c3e50, #4ca1af);">
                    <h3 class="fw-bold mb-0"><i class="fa-solid fa-user-pen me-2"></i>Profili Düzenle</h3>
                    <small class="opacity-75">@Model.AdSoyad bilgilerini güncelliyorsunuz</small>
                </div>

                <div class="card-body p-5 bg-white">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-floating mb-3">
                            <input asp-for="AdSoyad" class="form-control rounded-3" placeholder="Ad Soyad" />
                            <label asp-for="AdSoyad">Ad Soyad</label>
                            <span asp-validation-for="AdSoyad" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="UzmanlikAlani" class="form-control rounded-3" placeholder="Uzmanlık" />
                            <label asp-for="UzmanlikAlani">Uzmanlık Alanı</label>
                            <span asp-validation-for="UzmanlikAlani" class="text-danger small"></span>
                        </div>

                        <div class="card bg-light border-0 p-3 mb-4 rounded-3">
                            <h6 class="text-muted fw-bold small mb-3"><i class="fa-regular fa-clock me-1"></i>Çalışma Saatleri</h6>
                            <div class="row g-2">
                                <div class="col-6">
                                    <select asp-for="BaslamaSaati" class="form-select border-0 shadow-sm" asp-items="ViewBag.Saatler"></select>
                                </div>
                                <div class="col-6">
                                    <select asp-for="BitisSaati" class="form-select border-0 shadow-sm" asp-items="ViewBag.Saatler"></select>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-dark text-white btn-lg rounded-pill fw-bold shadow-sm"
                                    style="background: #2c3e50; border:none;">
                                <i class="fa-solid fa-floppy-disk me-2"></i>Güncelle
                            </button>
                            <a asp-action="Index" class="btn btn-light text-muted rounded-pill">Vazgeç</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}