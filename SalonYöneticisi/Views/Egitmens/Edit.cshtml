@model GymManagementApp.Models.Egitmen

@{
    ViewData["Title"] = "Edit";
}

<h1>Eğitmen Düzenle</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="AdSoyad" class="control-label"></label>
                <input asp-for="AdSoyad" class="form-control" />
                <span asp-validation-for="AdSoyad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UzmanlikAlani" class="control-label"></label>
                <input asp-for="UzmanlikAlani" class="form-control" />
                <span asp-validation-for="UzmanlikAlani" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="BaslamaSaati" class="control-label fw-bold">Mesai Başlangıç</label>
                        <select asp-for="BaslamaSaati" class="form-select" asp-items="ViewBag.Saatler"></select>
                        <span asp-validation-for="BaslamaSaati" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="BitisSaati" class="control-label fw-bold">Mesai Bitiş</label>
                        <select asp-for="BitisSaati" class="form-select" asp-items="ViewBag.Saatler"></select>
                        <span asp-validation-for="BitisSaati" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
