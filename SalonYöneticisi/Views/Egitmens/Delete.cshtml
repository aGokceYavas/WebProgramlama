@model GymManagementApp.Models.Egitmen

@{
    ViewData["Title"] = "Eğitmen Sil";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden text-center">
                <div class="card-body p-5">
                    <div class="mb-4 text-danger">
                        <i class="fa-solid fa-triangle-exclamation fa-4x mb-3 animate__animated animate__pulse animate__infinite"></i>
                        <h3 class="fw-bold">Emin misiniz?</h3>
                        <p class="text-muted">Bu eğitmen kaydı <strong>kalıcı olarak</strong> silinecektir.</p>
                    </div>

                    @if (ViewBag.HataMesaji != null)
                    {
                        <div class="alert alert-danger rounded-3 text-start mb-4">
                            <i class="fa-solid fa-circle-exclamation me-2"></i>@ViewBag.HataMesaji
                        </div>
                    }

                    <div class="bg-light rounded-3 p-4 mb-4 text-start">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fa-solid fa-user text-muted me-3 fs-5"></i>
                            <div>
                                <small class="text-muted d-block">Eğitmen</small>
                                <span class="fw-bold text-dark">@Model.AdSoyad</span>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="fa-solid fa-certificate text-muted me-3 fs-5"></i>
                            <div>
                                <small class="text-muted d-block">Uzmanlık</small>
                                <span class="fw-bold text-dark">@Model.UzmanlikAlani</span>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" class="d-grid gap-2">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger btn-lg rounded-pill fw-bold shadow-sm">
                            <i class="fa-solid fa-trash-can me-2"></i>Evet, Sil
                        </button>
                        <a asp-action="Index" class="btn btn-light rounded-pill text-muted">Vazgeç</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>