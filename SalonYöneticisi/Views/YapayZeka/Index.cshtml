@{
    ViewData["Title"] = "Akıllı Antrenör";
}

<div class="container py-5">

    <div class="text-center mb-5">
        <h2 class="fw-bold display-6">Akıllı Antrenör</h2>
        <p class="text-muted">Yapay zeka ile kişisel programınızı oluşturun.</p>
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="row g-5">
            <div class="col-lg-4">
                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-header bg-primary text-white p-3">
                        <h5 class="mb-0"><i class="fa-solid fa-sliders me-2"></i>Bilgileriniz</h5>
                    </div>
                    <div class="card-body p-4">
                        <form asp-action="ProgramOlustur" method="post" id="aiForm">
                            <div class="mb-3">
                                <label class="form-label">Yaş</label>
                                <input type="number" name="yas" class="form-control" value="@ViewBag.Yas" required placeholder="Örn: 24" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Kilo (kg)</label>
                                <input type="number" name="kilo" class="form-control" value="@ViewBag.Kilo" required placeholder="Örn: 80" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Boy (cm)</label>
                                <input type="number" name="boy" class="form-control" value="@ViewBag.Boy" required placeholder="Örn: 180" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Cinsiyet</label>
                                <select name="cinsiyet" class="form-select">
                                    <option value="Erkek">Erkek</option>
                                    <option value="Kadın">Kadın</option>
                                </select>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Hedefiniz</label>
                                <select name="hedef" class="form-select">
                                    <option value="Kilo Vermek">Kilo Vermek</option>
                                    <option value="Kas Yapmak">Kas Yapmak</option>
                                    <option value="Kondisyon Arttırmak">Kondisyon Arttırmak</option>
                                </select>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 rounded-pill" onclick="loadingAc()">
                                <i class="fa-solid fa-bolt me-2"></i>Programı Oluştur
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="card h-100 border-0 shadow-sm bg-light">
                    <div class="card-body p-5">

                        <div id="loadingDiv" style="display:none; text-align:center; padding: 50px;">
                            <div class="spinner-border text-primary" role="status"></div>
                            <h5 class="mt-3">Yapay Zeka Düşünüyor...</h5>
                            <small>Sizin için en uygun program hazırlanıyor.</small>
                        </div>

                        @if (ViewBag.Sonuc == null && ViewBag.Hata == null)
                        {
                            <div id="baslangicMsg" class="text-center text-muted py-5">
                                <i class="fa-solid fa-robot fa-3x mb-3"></i>
                                <h4>Hazır mısınız?</h4>
                                <p>Soldaki formu doldurun ve yapay zekanın sihrini izleyin.</p>
                            </div>
                        }

                        @if (ViewBag.Hata != null)
                        {
                            <div class="alert alert-danger">@ViewBag.Hata</div>
                        }

                        @if (ViewBag.Sonuc != null)
                        {
                            <div class="sonuc-kutusu">
                                <h3 class="text-success mb-4"><i class="fa-solid fa-check-circle me-2"></i>Programınız Hazır!</h3>
                                <hr />
                                <div class="ai-content">
                                    @Html.Raw(ViewBag.Sonuc)
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {

        <div class="alert alert-warning text-center p-5 rounded-4 shadow-sm">
            <i class="fa-solid fa-lock fa-3x mb-3"></i>
            <h3>Üyelere Özel Alan</h3>
            <p>Bu özelliği kullanmak için lütfen giriş yapın.</p>
            <a href="/Identity/Account/Login" class="btn btn-dark mt-3 px-4 rounded-pill">Giriş Yap</a>
        </div>
    }
</div>

<script>
    function loadingAc() {
        if (document.querySelector('form').checkValidity()) {
            document.getElementById('baslangicMsg').style.display = 'none';
            document.querySelector('.sonuc-kutusu')?.remove(); 
            document.getElementById('loadingDiv').style.display = 'block';
        }
    }
</script>

<style>
    /* Yapay zekadan gelen listeleri biraz güzelleştirelim */
    .ai-content ul {
        list-style-type: none;
        padding-left: 0;
    }

    .ai-content li {
        background: #fff;
        padding: 10px;
        margin-bottom: 5px;
        border-radius: 5px;
        border-left: 4px solid #4ca1af;
    }

    .ai-content h3 {
        font-size: 1.2rem;
        margin-top: 20px;
        color: #2c3e50;
        font-weight: bold;
    }
</style>