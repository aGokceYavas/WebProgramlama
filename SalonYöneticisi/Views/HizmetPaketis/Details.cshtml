@model GymManagementApp.Models.HizmetPaketi

@{
    ViewData["Title"] = "Paket Detayı";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="text-center p-5 text-white position-relative" style="background: linear-gradient(135deg, #2c3e50, #4ca1af);">
                    <div class="bg-white bg-opacity-25 rounded-circle p-3 d-inline-block mb-3">
                        <i class="fa-solid fa-box-open fa-3x"></i>
                    </div>
                    <h2 class="fw-bold">@Model.Ad</h2>
                    <span class="badge bg-white text-dark rounded-pill px-3 py-2 mt-2">
                        <i class="fa-solid fa-tag me-1"></i> @Model.Ucret ₺
                    </span>
                </div>

                <div class="card-body p-5">
                    <div class="row text-center mb-4">
                        <div class="col-6 border-end">
                            <small class="text-muted text-uppercase fw-bold">Süre</small>
                            <h4 class="text-dark mb-0">@Model.Sure Dk</h4>
                        </div>
                        <div class="col-6">
                            <small class="text-muted text-uppercase fw-bold">Eğitmen</small>
                            <h5 class="text-dark mb-0 mt-1">
                                @if (Model.Egitmen != null)
                                {
                                    <a asp-controller="Egitmens" asp-action="Details" asp-route-id="@Model.EgitmenId"
                                       class="text-dark text-decoration-none hover-underline">
                                        <i class="fa-solid fa-link me-1 small text-muted"></i>@Model.Egitmen.AdSoyad
                                    </a>
                                }
                                else
                                {
                                    <span>Atanmamış</span>
                                }
                            </h5>
                        </div>
                    </div>

                    <div class="bg-light p-4 rounded-3 mb-4">
                        <h6 class="fw-bold text-muted mb-2">Paket Açıklaması</h6>
                        <p class="mb-0 text-secondary">@Model.Aciklama</p>
                    </div>

                    <div class="d-grid gap-2 mb-3">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Randevus" asp-action="Create" asp-route-paketId="@Model.Id"
                               class="btn btn-success btn-lg rounded-pill fw-bold shadow-sm">
                                <i class="fa-regular fa-calendar-check me-2"></i>Hemen Randevu Al
                            </a>
                        }
                        else
                        {
                            <div class="alert alert-light text-center border small text-muted">
                                <i class="fa-solid fa-lock me-1"></i> Randevu almak için lütfen giriş yapınız.
                            </div>
                        }
                    </div>

                    <div class="d-flex justify-content-center gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                            <i class="fa-solid fa-arrow-left me-2"></i>Geri
                        </a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-dark rounded-pill px-4" style="background: #2c3e50; border:none;">
                                <i class="fa-solid fa-pen me-2"></i>Düzenle
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>