@model GymManagementApp.Models.HizmetPaketi

@{
    ViewData["Title"] = "Paket Düzenle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header text-white p-4 text-center border-0"
                     style="background: linear-gradient(135deg, #2c3e50, #4ca1af);">
                    <h3 class="fw-bold mb-0"><i class="fa-solid fa-pen-to-square me-2"></i>Paketi Düzenle</h3>
                    <small class="opacity-75">@Model.Ad bilgilerini güncelliyorsunuz</small>
                </div>

                <div class="card-body p-5 bg-white">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-floating mb-3">
                            <input asp-for="Ad" class="form-control rounded-3" placeholder="Paket Adı" />
                            <label asp-for="Ad">Paket Adı</label>
                            <span asp-validation-for="Ad" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <textarea asp-for="Aciklama" class="form-control rounded-3" placeholder="Açıklama" style="height: 100px"></textarea>
                            <label asp-for="Aciklama">Paket Açıklaması</label>
                            <span asp-validation-for="Aciklama" class="text-danger small"></span>
                        </div>

                        <div class="row g-2 mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="Sure" class="form-select rounded-3">
                                        <option value="30">30 Dakika</option>
                                        <option value="60">60 Dakika (1 Saat)</option>
                                        <option value="90">90 Dakika (1.5 Saat)</option>
                                        <option value="120">120 Dakika (2 Saat)</option>
                                    </select>
                                    <label asp-for="Sure">Süre</label>
                                </div>
                                <span asp-validation-for="Sure" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Ucret" class="form-control rounded-3" placeholder="Ücret" />
                                    <label asp-for="Ucret">Ücret (₺)</label>
                                </div>
                                <span asp-validation-for="Ucret" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="form-floating mb-4">
                            <select asp-for="EgitmenId" class="form-select rounded-3" asp-items="ViewBag.EgitmenId"></select>
                            <label asp-for="EgitmenId">Sorumlu Eğitmen</label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-dark btn-lg rounded-pill fw-bold shadow-sm" style="background: #2c3e50; border:none;">
                                <i class="fa-solid fa-floppy-disk me-2"></i>Değişiklikleri Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-light text-muted rounded-pill">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}