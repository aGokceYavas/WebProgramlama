@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header text-white p-4 text-center border-0"
                     style="background: linear-gradient(135deg, #2c3e50, #4ca1af);">
                    <div class="bg-white bg-opacity-25 rounded-circle p-3 d-inline-block mb-3">
                        <i class="fa-solid fa-right-to-bracket fa-2x"></i>
                    </div>
                    <h3 class="fw-bold mb-0">Hoş Geldiniz</h3>
                    <small class="opacity-75">Hesabınıza giriş yapın</small>
                </div>

                <div class="card-body p-5 bg-white">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 small" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control rounded-3" autocomplete="username" placeholder="name@example.com" />
                            <label asp-for="Input.Email"><i class="fa-solid fa-envelope me-2 text-muted"></i>Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.Password" class="form-control rounded-3" autocomplete="current-password" placeholder="password" />
                            <label asp-for="Input.Password"><i class="fa-solid fa-lock me-2 text-muted"></i>Şifre</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label small text-muted" asp-for="Input.RememberMe">
                                    Beni Hatırla
                                </label>
                            </div>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="small text-decoration-none text-primary fw-bold">
                                Şifremi Unuttum?
                            </a>
                        </div>

                        <div class="d-grid gap-2 mb-4">
                            <button id="login-submit" type="submit" class="btn btn-dark btn-lg rounded-pill fw-bold shadow-sm"
                                    style="background: #2c3e50; border:none;">
                                <i class="fa-solid fa-arrow-right-to-bracket me-2"></i>Giriş Yap
                            </button>
                        </div>

                        <div class="text-center border-top pt-4">
                            <span class="text-muted small">Hesabınız yok mu?</span>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none fw-bold ms-1" style="color: #4ca1af;">
                                Hemen Kayıt Olun
                            </a>
                        </div>

                        <div class="text-center mt-2">
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="small text-muted text-decoration-none">
                                <i class="fa-regular fa-envelope me-1"></i>Onay mailini tekrar gönder
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}