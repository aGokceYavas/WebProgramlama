@page
@model RegisterModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header text-white p-4 text-center border-0"
                     style="background: linear-gradient(135deg, #2c3e50, #4ca1af);">
                    <div class="bg-white bg-opacity-25 rounded-circle p-3 d-inline-block mb-3">
                        <i class="fa-solid fa-user-plus fa-2x"></i>
                    </div>
                    <h3 class="fw-bold mb-0">Aramıza Katılın</h3>
                    <small class="opacity-75">Yeni üyelik oluşturun</small>
                </div>

                <div class="card-body p-5 bg-white">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 small" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.AdSoyad" class="form-control rounded-3" aria-required="true" placeholder="Ad Soyad" />
                            <label asp-for="Input.AdSoyad"><i class="fa-solid fa-user me-2 text-muted"></i>Ad Soyad</label>
                            <span asp-validation-for="Input.AdSoyad" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control rounded-3" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email"><i class="fa-solid fa-envelope me-2 text-muted"></i>Email Adresi</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control rounded-3" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password"><i class="fa-solid fa-lock me-2 text-muted"></i>Şifre</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.ConfirmPassword" class="form-control rounded-3" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword"><i class="fa-solid fa-lock me-2 text-muted"></i>Şifre Tekrar</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 mb-4">
                            <button id="registerSubmit" type="submit" class="btn btn-dark btn-lg rounded-pill fw-bold shadow-sm"
                                    style="background: #2c3e50; border:none;">
                                <i class="fa-solid fa-check me-2"></i>Kayıt Ol
                            </button>
                        </div>

                        <div class="text-center border-top pt-4">
                            <span class="text-muted small">Zaten üye misiniz?</span>
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none fw-bold ms-1" style="color: #4ca1af;">
                                Giriş Yapın
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}